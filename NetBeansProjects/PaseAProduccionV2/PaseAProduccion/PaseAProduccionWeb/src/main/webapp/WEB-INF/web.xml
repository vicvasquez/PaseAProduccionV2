<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticateServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.AuthenticateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModulosServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.ModulosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormulariosServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.FormulariosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFormularioServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.DownloadFormularioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelarFormularioServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.CancelarFormularioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadModuloServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.DownloadModuloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaseAProduccionServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.PaseAProduccionServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ActualizarPerfilServlet</servlet-name>
        <servlet-class>com.cis.paseaproduccionweb.servlet.ActualizarPerfilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticateServlet</servlet-name>
        <url-pattern>/AuthenticateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModulosServlet</servlet-name>
        <url-pattern>/Modulos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormulariosServlet</servlet-name>
        <url-pattern>/Formularios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadFormularioServlet</servlet-name>
        <url-pattern>/DownloadFormulario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelarFormularioServlet</servlet-name>
        <url-pattern>/CancelarFormulario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadModuloServlet</servlet-name>
        <url-pattern>/DownloadModulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaseAProduccionServlet</servlet-name>
        <url-pattern>/PaseAProduccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarPerfilServlet</servlet-name>
        <url-pattern>/ActualizarPerfil</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            950
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
